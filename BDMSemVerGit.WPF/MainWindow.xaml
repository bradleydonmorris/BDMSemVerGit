<Window x:Class="BDMSemVerGit.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDMSemVerGit.WPF"
        mc:Ignorable="d"
        Title="BDMSemVerGit" Height="450" Width="800">
	<TabControl x:Name="tbcMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="16">
		<TabItem Header="Build Message">
			<local:MessageBuilder/>
		</TabItem>
		<TabItem Header="Repos">
			<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
				<StackPanel Orientation="Vertical" x:Name="stkRepoList">
				</StackPanel>
			</ScrollViewer>
		</TabItem>
	</TabControl>
</Window>
